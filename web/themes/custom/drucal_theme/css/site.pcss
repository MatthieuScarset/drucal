.site-header,
.site-content,
.site-footer {
  padding: 1rem;
}

.block-page-title-block:last-child {
  margin: 0;
}

.views-exposed-form__item {
  input,
  select {
    max-width: 12.5rem;
  }
}

.calendar-view-pager .pager__item > * {
  padding: 0;
}

.calendar-view-table {
  caption {
    position: absolute !important;
    overflow: hidden;
    clip: rect(1px, 1px, 1px, 1px);
    width: 1px;
    height: 1px;
    word-wrap: normal;
  }

  tr {
    border-width: 0;
  }

  /** Mobile (e.g. 48rem = 768px) **/
  @media (min-width: 48rem) {
    thead tr,
    th:first-child {
      border-top-left-radius: var(--gin-border-l);
    }
    thead tr,
    th:last-child {
      border-top-right-radius: var(--gin-border-l);
    }
    tr:last-child td:first-child {
      border-bottom-left-radius: var(--gin-border-l);
    }
    tr:last-child td:last-child {
      border-bottom-right-radius: var(--gin-border-l);
    }
  }

  td[data-calendar-view-today],
  td[data-calendar-view-selected] {
    border-width: 2px;
    border-color: var(--calendar-view-color-evil);
  }

  td[data-calendar-view-selected] {
    border-style: dashed;
  }
}

// Grid layout.
.view-style-calendar-view {
  display: grid;
  grid-template-areas:
    "header pager"
    "messages messages"
    "sidebar content"
    "footer footer";
  row-gap: 0.25rem;
  column-gap: 2rem;
  grid-auto-rows: minmax(1rem, auto);
  grid-template-columns: 0.5fr 2.5fr;

  .messages-list {
    grid-area: messages;
  }
  .view-header {
    grid-area: header;
  }
  .view-footer {
    grid-area: footer;
  }
  .calendar-view-pager {
    grid-area: pager;
  }
  .view-filters {
    grid-area: sidebar;

    .views-exposed-form {
      position: sticky;
      top: 0;
    }
  }
  .view-content {
    grid-area: content;
  }
  .pager__items {
    margin: 0;
  }
  .feed-icons {
    grid-area: footer;
  }
}
